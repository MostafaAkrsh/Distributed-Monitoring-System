import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.net.Socket;

public class ComputerHandlerNode extends Thread {

	private Socket node;
	private static int nodeCnt = 0;
	private int nodeId;
	public static String data = "";

	public ComputerHandlerNode(Socket node) {
		this.node = node;
		nodeId = nodeCnt;
		nodeCnt++;
	}

	@Override
	public void run() {

		System.out.println("New Node Connected to Computer - Node ID: " + nodeId);
		
		/* read data from node */
		DataInputStream dis = null;
		try {
			dis = new DataInputStream(node.getInputStream());
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		String st = null;
		try {
			st = new String(dis.readUTF());
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		if (st.contains("I'm Driver")) {
			System.out.println("Driver Connected");
			data += st;
			try {
				st = new String(dis.readUTF());
			} catch (IOException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			}

			if (st.contains("Give Me MA")) {
				System.out.println(st);
				try {
					sendFile("MA.exe");
				} catch (Exception e) {
					e.printStackTrace();
				}
				System.out.println("Mobile Agent has been sent to the driver successfully");
			}
			data += st;
		} else {
			System.out.println(st);
			data += st;
		}
	}

	public void sendFile(String path) throws Exception {
		int bytes = 0;
		File file = new File(path);
		FileInputStream fileInputStream = new FileInputStream(file);

		DataOutputStream dos = null;

		try {
			dos = new DataOutputStream(node.getOutputStream());
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		// send file size
		dos.writeLong(file.length());
		// break file into chunks
		byte[] buffer = new byte[4 * 1024];
		while ((bytes = fileInputStream.read(buffer)) != -1) {
			dos.write(buffer, 0, bytes);
			dos.flush();
		}
		fileInputStream.close();
	}

}
